        xmlns:local="clr-namespace:AssetWatch"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Einstellungen" Height="400" Width="700"
        ResizeMode="NoResize"
        >
